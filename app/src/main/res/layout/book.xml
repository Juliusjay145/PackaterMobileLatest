<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-120dp"
            android:src="@drawable/newlogopackaters" />

        <EditText
            android:id="@+id/packagename"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/editText4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:editable="false"
            android:background="@drawable/rounded_buttons2"
            android:drawableStart="@drawable/accounts"
            android:drawableLeft="@drawable/accounts"
            android:ems="10"
            android:hint="Package Name"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe"
            android:textColorLink="#fefefe" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:editable="false"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_buttons2"
            android:drawableStart="@drawable/address"
            android:drawableLeft="@drawable/address"
            android:ems="10"
            android:hint="Address"
            android:inputType="none"
            android:padding="10dp"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe"
            android:textColorLink="#fefefe" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/editText4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/redbtns"
            android:ems="10"
            android:hint="Choose Date"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:drawableStart="@drawable/calendar"
            android:drawableLeft="@drawable/calendar"
            android:textColorHint="#4D585B"
            android:textColorLink="#000000" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="144dp"
            android:background="@drawable/redbtns"
            android:ems="10"
            android:hint="Choose Time"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000"
            android:drawableStart="@drawable/time"
            android:drawableLeft="@drawable/time"
            android:textColorHint="#4D585B"
            android:textColorLink="#000000" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="-125dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_buttons2"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#fefefe" />

            <Button
                android:id="@+id/book1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_buttons2"
                android:gravity="center"
                android:text="Book"
                android:layout_marginRight="10dp"
                android:textColor="#fefefe" />
        </LinearLayout>

